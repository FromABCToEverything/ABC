<!--pages/wordDetail/wordDetail.wxml-->
<cu-custom bgColor="bg-gradual-green" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">单词详情</view>
</cu-custom>

<view class="bg-white">
  <view class="basis-lg bg-grey margin-xs padding-sm radius">单词内容:{{wordDetail[0].content}}</view>
  <view class="flex">
    <view class="flex-sub bg-grey padding-sm margin-xs radius">音标{{wordDetail[0].pronounce}}</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius">
      <text class="cuIcon-notification"></text>
    </view>
  </view>
  <view class="basis-lg bg-grey margin-xs padding-sm radius">词性{{wordDetail[0].pos}}</view>
</view>

<view class="bg-white">
  <view class="text-left padding">中文释义{{wordDetail[0].meaningZh}}</view>
  <view class="text-left padding">源语言释义：{{wordDetail[0].meaningRaw}}</view>
  <view class="text-left padding" wx:if="{{wordDetail[0].tag!=null}}">tag:{{wordDetail[0].tag}}</view>
</view>

<!-- 底部操作条 -->

<view class="cu-bar tabbar bg-white foot">
  <view class="action text-grey" bindtap="collect" data-target="CollectModal">
    <view class="cuIcon-favor"></view> 收藏
  </view>
<view class="cu-modal {{modalName=='DialogModal2'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">收藏/取消收藏</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text> 
      </view>
    </view>
    <view class="padding-xl">
      <scroll-view scroll-y="true" style="height: {{height}}rpx;">
        <checkbox-group >
          <view class="checkbox" wx:for="{{userWordSet_arr}}" bindtap="chooseSet" data-id="{{index}}">
            <view class="cu-form-group">
              <label class="flex justify-between align-center flex-sub">
                <view class="flex-sub">{{item.setName}}</view>
                <checkbox class="round"  checked="{{item.checked}}" />
              </label>
            </view>
          </view>
        </checkbox-group>
      </scroll-view>
    </view>
    <view class="cu-bar bg-white">
      <view class="action margin-0 flex-sub text-green solid-left" bindtap="hideModal">取消</view>
      <view class="action margin-0 flex-sub  solid-left" bindtap="confirmChoose">确定</view>
    </view>
  </view>
</view>

  <view class="action text-gray">
    <view class="cuIcon-writefill" bindtap="makeNote"></view>笔记
  </view>
  <view class="action text-gray">
    <view class="cuIcon-edit" bindtap="practice"></view>练习
  </view>
</view>

