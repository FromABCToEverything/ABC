<view class="box">
  <view class="cu-bar tabbar bg-white foot">
    <view class="action">
      <picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
        <view class="picker">
          <!-- {{index?picker[index]:'禁止换行，超出容器部分会以 ... 方式截断'}} -->
          <!-- <button class="cu-btn bg-grey">收藏</button> -->
          <text class="cuIcon-like"></text>
          <view class="text-grey">收藏</view>
        </view>
      </picker>
    </view>
    <view class="action">
      <text class="cuIcon-comment" bindtap="comment"></text>
      <view class="text-gray">评论</view>
    </view>
    <view class="action">
      <text class="cuIcon-writefill" bindtap="makeNote"></text>
      <view class="text-gray">笔记</view>
    </view>
  </view>
</view>