<cu-custom bgColor="bg-gradual-pink" isCustom="{{true}}"><view slot="content">笔记</view></cu-custom>


<view class="cu-bar input">
  <input type="text" placeholder="标题" confirm-type="done"  bindblur="titleBlur" focus="{{true}}"  value="{{title}}"></input>
</view>

<view class="cu-form-group margin-top">
  <textarea maxlength="-1" bindinput="noteInput" value="{{content}}" confirm-type="done" placeholder="笔记正文"></textarea>
</view>
<view class="padding flex flex-direction">
  <button class="cu-btn bg-red margin-tb-sm lg">提交</button>
</view>