<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}"><view slot="backText">返回</view><view slot="content">书籍详情</view></cu-custom>

<view class="item solid-bottom margin-top padding">
  <image src="{{book[0].coverUrl}}" style="width: 120px; height: 140px" ></image>
  <view class="text-black text-bold text-lg text-center">{{book[0].title}}</view>
</view>
<view class="text-center padding">语言：{{book[0].language}}, isbn:{{book[0].isbn}}， 出版社：{{book[0].press}}</view>
<view class="text-content text-center padding"> {{book[0].description}}</view>
<view class="text-black text-center">单词量：3500</view>
<view class="padding flex flex-direction">
  <button class="cu-btn bg-green lg" bindtap="toVocabulary" data-book="{{book[0].bookId}}">开始学习单词</button>
</view>

<view class="cu-bar tabbar bg-white foot">
  <view class="action text-grey" bindtap="collect" data-target="CollectModal">
    <view class="cuIcon-favor"></view>收藏
  </view>

<view class="cu-modal {{modalName=='DialogModal2'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">收藏/取消收藏</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text> 
      </view>
    </view>
    <view class="padding-xl">
      <scroll-view scroll-y="true" style="height: {{height}}rpx;">
        <checkbox-group >
          <view class="checkbox" wx:for="{{userBookSet_arr}}" bindtap="chooseSet" data-id="{{index}}">
            <view class="cu-form-group">
              <label class="flex justify-between align-center flex-sub">
                <view class="flex-sub">{{item.setName}}</view>
                <checkbox class="round"  checked="{{item.checked}}" />
              </label>
            </view>
          </view>
        </checkbox-group>
      </scroll-view>
    </view>
    <view class="cu-bar bg-white">
      <view class="action margin-0 flex-sub text-green solid-left" bindtap="hideModal">取消</view>
      <view class="action margin-0 flex-sub  solid-left" bindtap="confirmChoose">确定</view>
    </view>
  </view>
</view>

  <view class="action text-gray">
    <view class="cuIcon-comment" bindtap="comment"></view> 评论
  </view>
  <view class="action text-gray">
    <view class="cuIcon-writefill" bindtap="makeNote"></view> 笔记
  </view>
</view>